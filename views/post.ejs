<%- include ('./partials/header.ejs') %>

  <section>
    <div class="col post w-33">
      <h1 class="title">Post</h1>
      <form action="/newListing" method="post" id="post-form">
        <label for="images">Images</label>
        <!-- <input type="file" name="images" id="images" class="neu"> -->

        <div id="drop-region" class="neu bg-color">
            <div class="drop-message">
                Drag & Drop images or click to upload
            </div>
            <div id="image-preview"></div>
        </div>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="neu">
        <label for="price">Price</label>
        <input type="text" name="price" id="price" class="neu">
        <label for="quantity">Quantity</label>
        <input type="number" name="quantity" id="quantity" class="neu">
        <label for="material">Material</label>
        <select name="material" id="material" class="neu">
          <option value="stainless">Stainless</option>
          <option value="alloy">Alloy</option>
          <option value="carbon">Carbon</option>
          <option value="tool">Tool</option>
          <option value="other">Other</option>
        </select>

        <label for="type">Type</label>
        <div class="row between type neu-static">
          <input type="hidden" name="type" id="type" value = 'other-other'>
          <div class="col">
            <!-- <img class="preview-img" src="/images/types/bar-square.svg" alt="Preview of following Checkbox's"> -->
            <object class="preview-img" data="/images/types/bar-square.svg" width="150" height="150"></object>
            
          </div>
          <div class="col start base-type">
          
              <label class="radio row start">
                <span class="radio-input">
                  <input type="radio" name="base" id="bar" value="bar">
                  <span class="radio-control row neu"></span>
                </span>
                <span class="radio-label">Bar</span>
              </label>
          
        
              <label class="radio row start">
                <span class="radio-input">
                  <input type="radio" name="base" id="tubing" value="tubing">
                  <span class="radio-control row neu"></span>
                </span>
                <span class="radio-label">Tubing</span>
              </label>
         
              <label class="radio row start">
                <span class="radio-input">
                  <input type="radio" name="base" id="beam" value="beam">
                  <span class="radio-control row neu"></span>
                </span>
                <span class="radio-label">Beam</span>
              </label>
           
              <label class="radio row start">
                <span class="radio-input">
                  <input type="radio" name="base" id="sheet" value="sheet">
                  <span class="radio-control row neu"></span>
                </span>
                <span class="radio-label">Sheet</span>
              </label>
         
        
              <label class="radio row start">
                <span class="radio-input">
                  <input type="radio" name="base" id="mesh" value="mesh">
                  <span class="radio-control row neu"></span>
                </span>
                <span class="radio-label">Mesh</span>
              </label>
         

          </div>
          <div class="col start sec-type">
 
          </div>
        </div>
        <label for="description">Description</label>
        <textarea class="neu" name="description" id="description" cols="30" rows="6"></textarea>
      
          <label for="autoCompleteGeo">Location</label>
          <input id="autoCompleteGeo" class="autoCompleteGeo neu" type="search" dir="ltr" 
          spellcheck="false" 
          autocorrect="off" 
          autocomplete="off" 
          autocapitalize="off" 
          maxlength="2048" 
          tabindex="1"
           role="combobox" 
           aria-haspopup="true" 
           aria-expanded="false" 
           aria-controls="autoComplete_list" 
           aria-autocomplete="both" placeholder="Search">
          <input type="hidden" name="location" id="location">
          <div class="results">
         
          </div>
 

        <input type="submit" value="Post" class="neu">

   

      </form>
    </div>

  </section>

  



  <%- include ('./partials/footer.ejs') %>